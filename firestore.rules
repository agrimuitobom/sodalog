rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Records: owner can read/write; anyone can read shared records
    match /records/{recordId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow read: if resource.data.shared == true;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Shares: owner can create/delete, anyone can read (to resolve share links)
    match /shares/{shareId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Comments: any authenticated user can create/read, owner can delete
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null
        && request.auth.uid == resource.data.userId;
    }
  }
}
